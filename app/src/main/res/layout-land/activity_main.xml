<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="3"
    app:rowCount="3"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.4">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/speed_bg" />

        <TextView
            android:id="@+id/speed_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_1"
            android:layout_alignLeft="@id/image_1"
            android:layout_alignRight="@id/image_1"
            android:layout_alignTop="@id/image_1"
            android:gravity="center"
            android:text="0.0 m/s"
            android:textSize="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.4">

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.4">

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/speed_bg" />

        <TextView
            android:id="@+id/speed_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_3"
            android:layout_alignLeft="@id/image_3"
            android:layout_alignRight="@id/image_3"
            android:layout_alignTop="@id/image_3"
            android:gravity="center"
            android:text="0.0 rpm"
            android:textSize="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.2">

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/current_voltage_bg" />

        <TextView
            android:id="@+id/voltage_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_4"
            android:layout_alignLeft="@id/image_4"
            android:layout_alignRight="@id/image_4"
            android:layout_alignTop="@id/image_4"
            android:gravity="center"
            android:text="0.0 V"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.1">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.2">

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/current_voltage_bg" />

        <TextView
            android:id="@+id/current_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_5"
            android:layout_alignLeft="@id/image_5"
            android:layout_alignRight="@id/image_5"
            android:layout_alignTop="@id/image_5"
            android:gravity="center"
            android:text="0.0 A"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.2">

        <ImageView
            android:id="@+id/image_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/temperature_bg" />

        <TextView
            android:id="@+id/temperature_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_6"
            android:layout_alignLeft="@id/image_6"
            android:layout_alignRight="@id/image_6"
            android:layout_alignTop="@id/image_6"
            android:gravity="center"
            android:text="0.0 \u2103"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.2">

        <ImageView
            android:id="@+id/image_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/temperature_bg" />

        <TextView
            android:id="@+id/temperature_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_7"
            android:layout_alignLeft="@id/image_7"
            android:layout_alignRight="@id/image_7"
            android:layout_alignTop="@id/image_7"
            android:gravity="center"
            android:text="0.0 \u2103"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.2">

        <ImageView
            android:id="@+id/image_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.25"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/temperature_bg" />

        <TextView
            android:id="@+id/temperature_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_8"
            android:layout_alignLeft="@id/image_8"
            android:layout_alignRight="@id/image_8"
            android:layout_alignTop="@id/image_8"
            android:gravity="center"
            android:text="0.0 \u2103"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="0.2"
        app:layout_columnSpan="3"
        android:background="#000000">

        <ListView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </ListView>
    </RelativeLayout>
</android.support.v7.widget.GridLayout>
